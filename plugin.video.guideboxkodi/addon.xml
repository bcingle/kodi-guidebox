<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.guideboxkodi" name="Guidebox Kodi" version="0.5" provider-name="sigo">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="plugin.program.chrome.launcher" version="1.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Guidebox navigator for Kodi</summary>
        <description lang="en_US">Guidebox is a service that scrapes many streaming video sources for streaming links, and provides them in a navigable API. This plugin provides an interface to the API. Some fanart is provided by TheMovieDB when not available from Guidebox. Please help by submitting your own artwork to these free sources!</description>
        <platform>all</platform>
        <!-- forum>http://forum.kodi.tv/showthread.php?tid=254203</forum -->
        <source>https://github.com/bcingle/plugin.video.guideboxkodi</source>
        <website>http://ben.lilingles.com/guidebox</website>
        <email>ben@lilingles.com</email>
        <language></language>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    </extension>
    <extension point="xbmc.addon.repository" name="Guidebox Kodi Update Repo">
        <info>http://mirrors.xbmc.org/addons/dharma-pre/addons.xml</info>
        <checksum>http://mirrors.xbmc.org/addons/dharma-pre/addons.xml.md5</checksum>
        <datadir>http://mirrors.xbmc.org/addons/dharma-pre</datadir>
    </extension>
</addon>
